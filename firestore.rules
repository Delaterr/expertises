
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --------------------------------------------------------------------
    // Helper Functions
    // --------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isShopOwner(shopId) {
        return get(/databases/$(database)/documents/shops/$(shopId)).data.ownerId == request.auth.uid;
    }
    
    function isSuperAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --------------------------------------------------------------------
    // User Data
    // --------------------------------------------------------------------
    match /users/{userId} {
      // Allow super admins to list all users
      allow list: if isSuperAdmin();
      // Allow users to read/write their own profile, and super admins to read any profile
      allow get, write: if isOwner(userId) || isSuperAdmin();
    }

    // --------------------------------------------------------------------
    // Shop Data (Multi-Tenant)
    // --------------------------------------------------------------------
    match /shops/{shopId} {
      allow get, list: if true;
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isShopOwner(shopId);

      // --- Subcollection Rules ---

      match /products/{productId} {
        allow get, list: if true;
        allow write: if isShopOwner(shopId);
      }
      
      match /categories/{categoryId} {
         allow get, list: if true;
         allow write: if isShopOwner(shopId);
      }
      
      match /customers/{customerId} {
         allow read: if isSignedIn();
         allow write: if isShopOwner(shopId);
      }
      
      match /transactions/{transactionId} {
        allow read: if isSignedIn();
        allow write: if isShopOwner(shopId);
      }

      match /userShopRoles/{userShopRoleId} {
          allow read: if isSignedIn();
          allow write: if isShopOwner(shopId);
      }

       match /role-definitions/{roleDefinitionId} {
          allow read: if isSignedIn();
          allow write: if isShopOwner(shopId);
      }
    }
    
    // --------------------------------------------------------------------
    // Super Admin Roles
    // --------------------------------------------------------------------
    match /roles_admin/{userId} {
        allow read: if isOwner(userId) || isSuperAdmin();
        allow create: if isSignedIn();
        allow write: if isSuperAdmin();
    }
  }
}
